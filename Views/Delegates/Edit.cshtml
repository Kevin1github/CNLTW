@using ConferenceDelegateManagement1234122.Models
@model Delegate1

@{
    ViewData["Title"] = "Edit Delegate";
}

<h1>Edit Delegate</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Organization" class="form-label"></label>
                        <input asp-for="Organization" class="form-control" />
                        <span asp-validation-for="Organization" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobTitle" class="form-label"></label>
                        <input asp-for="JobTitle" class="form-control" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DietaryRequirements" class="form-label"></label>
                        <textarea asp-for="DietaryRequirements" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="DietaryRequirements" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SpecialRequirements" class="form-label"></label>
                        <textarea asp-for="SpecialRequirements" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="SpecialRequirements" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Edit Delegate</h5>
            </div>
            <div class="card-body">
                <p>Update the delegate's information as needed. Required fields are marked.</p>

                <hr>

                <h6>Notes:</h6>
                <ul>
                    <li>Email address must be unique in the system</li>
                    <li>Updating contact information will affect all registrations</li>
                    <li>Special requirements help us accommodate delegate needs</li>
                </ul>

                <hr>

                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-info-circle"></i> View Details
                    </a>
                    <a asp-controller="Registrations" asp-action="Index" asp-route-delegateId="@Model.Id" class="btn btn-outline-success">
                        <i class="bi bi-people"></i> View Registrations
                    </a>
                    <a asp-controller="Registrations" asp-action="Create" asp-route-delegateId="@Model.Id" class="btn btn-outline-info">
                        <i class="bi bi-plus-circle"></i> Register for Conference
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}