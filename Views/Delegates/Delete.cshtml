@using ConferenceDelegateManagement1234122.Models
@model Delegate1

@{
    ViewData["Title"] = "Delete Delegate";
}

<h1>Delete Delegate</h1>

<div class="alert alert-danger mb-4">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <strong>Warning:</strong> Are you sure you want to delete this delegate? This will permanently remove the delegate record
    and all associated registrations. This action cannot be undone.
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Delegate Information</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Name:</div>
            <div class="col-md-9">@Model.FirstName @Model.LastName</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Email:</div>
            <div class="col-md-9">@Model.Email</div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Organization))
        {
            <div class="row mb-3">
                <div class="col-md-3 fw-bold">Organization:</div>
                <div class="col-md-9">@Model.Organization</div>
            </div>
        }
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Registrations:</div>
            <div class="col-md-9">
                @if (Model.Registrations.Any())
                {
                    <span class="text-danger">@Model.Registrations.Count registrations will be deleted</span>
                }
                else
                {
                    <span>No registrations associated with this delegate</span>
                }
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>