@using ConferenceDelegateManagement1234122.Models
@model Session

@{
    ViewData["Title"] = "Edit Session";
}

<h1>Edit Session</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartTime" class="form-label"></label>
                            <input asp-for="StartTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndTime" class="form-label"></label>
                            <input asp-for="EndTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Speaker" class="form-label"></label>
                            <input asp-for="Speaker" class="form-control" />
                            <span asp-validation-for="Speaker" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Room" class="form-label"></label>
                            <input asp-for="Room" class="form-control" />
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MaximumAttendees" class="form-label"></label>
                            <input asp-for="MaximumAttendees" class="form-control" />
                            <span asp-validation-for="MaximumAttendees" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Track" class="form-label"></label>
                            <input asp-for="Track" class="form-control" />
                            <span asp-validation-for="Track" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConferenceId" class="form-label">Conference</label>
                        <select asp-for="ConferenceId" asp-items="ViewBag.ConferenceId" class="form-select"></select>
                        <span asp-validation-for="ConferenceId" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" asp-route-conferenceId="@Model.ConferenceId" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Edit Session</h5>
            </div>
            <div class="card-body">
                <p>Update the session details as needed. Required fields are marked.</p>

                <hr>

                <h6>Notes:</h6>
                <ul>
                    <li>Changing session times may affect delegate schedules</li>
                    <li>Reducing maximum attendees may affect existing registrations</li>
                    <li>Session times must remain within conference dates</li>
                </ul>

                <hr>

                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-info-circle"></i> View Details
                    </a>
                    <a asp-controller="Conferences" asp-action="Details" asp-route-id="@Model.ConferenceId" class="btn btn-outline-info">
                        <i class="bi bi-calendar-event"></i> View Conference
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}