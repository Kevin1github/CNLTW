@using ConferenceDelegateManagement1234122.Models
@model Conference

@{
    ViewData["Title"] = "Conference Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Conference Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Description:</div>
                    <div class="col-md-9">@Model.Description</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Dates:</div>
                    <div class="col-md-9">@Model.StartDate.ToString("MMMM d, yyyy") - @Model.EndDate.ToString("MMMM d, yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Location:</div>
                    <div class="col-md-9">@Model.Location</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Maximum Delegates:</div>
                    <div class="col-md-9">
                        @if (Model.MaximumDelegates > 0)
                        {
                            <span>@Model.MaximumDelegates</span>
                        }
                        else
                        {
                            <span>Unlimited</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Registration Deadline:</div>
                    <div class="col-md-9">
                        @if (Model.RegistrationDeadline.HasValue)
                        {
                            <span>@Model.RegistrationDeadline.Value.ToString("MMMM d, yyyy")</span>
                        }
                        else
                        {
                            <span>Not specified</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Status:</div>
                    <div class="col-md-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Organizer Contact:</div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.OrganizerEmail))
                        {
                            <div>Email: <a href="mailto:@Model.OrganizerEmail">@Model.OrganizerEmail</a></div>
                        }
                        @if (!string.IsNullOrEmpty(Model.OrganizerPhone))
                        {
                            <div>Phone: @Model.OrganizerPhone</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sessions Section -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                <h5 class="mb-0">Sessions</h5>
                <a asp-controller="Sessions" asp-action="Create" asp-route-conferenceId="@Model.Id" class="btn btn-sm btn-light">
                    <i class="bi bi-plus-circle"></i> Add Session
                </a>
            </div>
            <div class="card-body">
                @if (Model.Sessions != null && Model.Sessions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Time</th>
                                    <th>Room</th>
                                    <th>Speaker</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model.Sessions.OrderBy(s => s.StartTime))
                                {
                                    <tr>
                                        <td>@session.Title</td>
                                        <td>
                                            @session.StartTime.ToString("MMM d, h:mm tt") - @session.EndTime.ToString("h:mm tt")
                                        </td>
                                        <td>@session.Room</td>
                                        <td>@session.Speaker</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Sessions" asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-primary">
                                                    <i class="bi bi-info-circle"></i>
                                                </a>
                                                <a asp-controller="Sessions" asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Sessions" asp-action="Index" asp-route-conferenceId="@Model.Id" class="btn btn-outline-primary">
                            View All Sessions
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No sessions have been added to this conference yet.
                    </div>
                    <a asp-controller="Sessions" asp-action="Create" asp-route-conferenceId="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Session
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Registrations Summary Card -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                <h5 class="mb-0">Registrations</h5>
                <a asp-controller="Registrations" asp-action="Create" asp-route-conferenceId="@Model.Id" class="btn btn-sm btn-light">
                    <i class="bi bi-plus-circle"></i> Add
                </a>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Total Registrations:</span>
                        <span class="fw-bold">@Model.Registrations.Count</span>
                    </div>

                    @if (Model.MaximumDelegates > 0)
                    {
                        <div class="progress mt-2" style="height: 20px;">
                            @{
                                var percentage = Math.Min(100, Model.Registrations.Count * 100 / Math.Max(1, Model.MaximumDelegates));
                                var progressClass = percentage < 70 ? "bg-success" : percentage < 90 ? "bg-warning" : "bg-danger";
                            }
                            <div class="progress-bar @progressClass" role="progressbar" style="width: @percentage%;"
                                 aria-valuenow="@Model.Registrations.Count" aria-valuemin="0" aria-valuemax="@Model.MaximumDelegates">
                                @Model.Registrations.Count / @Model.MaximumDelegates
                            </div>
                        </div>
                    }
                </div>

                <!-- Payment Status Summary -->
                <div class="mb-3">
                    <h6>Payment Status</h6>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Paid:</span>
                        <span>@Model.Registrations.Count(r => r.PaymentStatus == PaymentStatus.Paid)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Pending:</span>
                        <span>@Model.Registrations.Count(r => r.PaymentStatus == PaymentStatus.Pending)</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Cancelled/Refunded:</span>
                        <span>@Model.Registrations.Count(r => r.PaymentStatus == PaymentStatus.Cancelled || r.PaymentStatus == PaymentStatus.Refunded)</span>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-controller="Registrations" asp-action="Index" asp-route-conferenceId="@Model.Id" class="btn btn-outline-primary w-100">
                        Manage Registrations
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Delegates Card -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Recent Registrations</h5>
            </div>
            <div class="card-body">
                @if (Model.Registrations != null && Model.Registrations.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var registration in Model.Registrations.OrderByDescending(r => r.RegistrationDate).Take(5))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div>@registration.Delegate?.FullName</div>
                                    <small class="text-muted">@registration.RegistrationDate.ToString("MMM d, yyyy")</small>
                                </div>
                                <span class="badge @(registration.PaymentStatus == PaymentStatus.Paid ? "bg-success" :
                                                    registration.PaymentStatus == PaymentStatus.Pending ? "bg-warning" : "bg-secondary")">
                                    @registration.PaymentStatus
                                </span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-info">
                        No registrations found for this conference.
                    </div>
                }
            </div>
        </div>

        <!-- Actions Card -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Registrations" asp-action="Create" asp-route-conferenceId="@Model.Id" class="btn btn-outline-success">
                        <i class="bi bi-person-plus"></i> Register Delegate
                    </a>
                    <a asp-controller="Sessions" asp-action="Create" asp-route-conferenceId="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-calendar-plus"></i> Add Session
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="bi bi-pencil"></i> Edit Conference
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete Conference
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>