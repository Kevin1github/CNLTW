@model ConferenceDelegateManagement1234122.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">My Profile</h4>
                    <a asp-action="Edit" class="btn btn-light">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Full Name:</div>
                        <div class="col-md-9">@Model.FullName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Email:</div>
                        <div class="col-md-9">@Model.Email</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Phone Number:</div>
                        <div class="col-md-9">@(Model.PhoneNumber ?? "Not provided")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Company:</div>
                        <div class="col-md-9">@(Model.Company ?? "Not provided")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Job Title:</div>
                        <div class="col-md-9">@(Model.JobTitle ?? "Not provided")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Address:</div>
                        <div class="col-md-9">@(Model.Address ?? "Not provided")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Member Since:</div>
                        <div class="col-md-9">@Model.CreatedAt.ToString("MMMM d, yyyy")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Last Updated:</div>
                        <div class="col-md-9">@Model.UpdatedAt.ToString("MMMM d, yyyy")</div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="ChangePassword" class="btn btn-warning">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 