@model ConferenceDelegateManagement1234122.Models.RestStop
@using ConferenceDelegateManagement1234122.Models.Enums

@{
    ViewData["Title"] = "Delete Accommodation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Accommodation</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Are you sure you want to delete this accommodation? This action cannot be undone.
                    </div>

                    <div class="mb-4">
                        <h5>Accommodation Details</h5>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">Address</dt>
                            <dd class="col-sm-9">@Model.Address</dd>

                            <dt class="col-sm-3">Phone Number</dt>
                            <dd class="col-sm-9">@Model.PhoneNumber</dd>

                            <dt class="col-sm-3">Price per Night</dt>
                            <dd class="col-sm-9">@Model.PricePerNight.ToString("C")</dd>

                            <dt class="col-sm-3">Available Rooms</dt>
                            <dd class="col-sm-9">@Model.AvailableRooms</dd>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">@Model.Description</dd>
                            }
                        </dl>
                    </div>

                    @if (Model?.Bookings != null && Model.Bookings.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i>
                            Warning: This accommodation has @Model.Bookings.Count active bookings.
                            Deleting it will also remove all associated bookings.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ConferenceId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Accommodation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 